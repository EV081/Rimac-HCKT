{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Servicios",
  "type": "object",
  "x-dynamodb": {
    "partition_key": "nombre"
  },
  "properties": {
    "nombre": {
      "type": "string"
    },
    "descripcion": {
      "type": "string"
    },
    "categoria": {
      "type": "string",
      "enum": [
        "bienestar",
        "salud",
        "productividad",
        "social"
      ]
    }
  },
  "required": [
    "nombre",
    "descripcion"
  ],
  "additionalProperties": false
}