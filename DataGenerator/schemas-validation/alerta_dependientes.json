{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Alerta Dependientes",
  "type": "object",
  "x-dynamodb": {
    "partition_key": "alterta_id"
  },
  "properties": {
    "alterta_id": { "type": "string" },
    "correo_tutor": {
      "type": "string",
      "format": "email"
    },
    "dependent_id": { "type": "string" },
    "title": { "type": "string" },
    "message": { "type": "string"},
    "estado": { 
        "type": "string",
        "enum": ["TRUE", "FALSE"]
    }
  },
  "required": ["correo_tutor", "nombre", "birthdate", "parentesco", "sexo"],
  "additionalProperties": false
}
