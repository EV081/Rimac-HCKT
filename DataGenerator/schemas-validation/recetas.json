{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Recetas",
  "type": "object",
  "x-dynamodb": {
    "partition_key": "receta_id"
  },
  "properties": {
    "receta_id": {
      "type": "string"
    },
    "paciente": {
      "type": "string"
    },
    "institucion": {
      "type": "string"
    },
    "recetas": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "producto": {
            "type": "string"
          },
          "dosis": {
            "type": ["string", "null"]
          },
          "frecuencia": {
            "type": "integer"
          },
          "medicion_frecuencia": {
            "type": "string",
            "enum": ["dias", "horas", "meses"]
          },
          "duracion": {
            "type": "integer"
          },
          "duracion_frecuencia": {
            "type": "string",
            "enum": ["dias", "horas", "meses"]
          }
        },
        "required": ["producto", "frecuencia", "medicion_frecuencia", "duracion", "duracion_frecuencia"],
        "additionalProperties": false
      }
    }
  },
  "required": ["receta_id", "paciente", "institucion", "recetas"],
  "additionalProperties": false
}
