{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Recetas",
  "type": "object",
  "x-dynamodb": {
    "partition_key": "email",
    "sort_key": "receta_id"
  },
  "properties": {
    "email": {
      "type": "string",
      "format": "email"
    },
    "receta_id": {
      "type": "string"
    },
    "paciente": {
      "type": [
        "string",
        "null"
      ]
    },
    "institucion": {
      "type": "string"
    },
    "recetas": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "producto": {
            "type": "string"
          },
          "dosis": {
            "type": [
              "string",
              "null"
            ]
          },
          "frecuencia_valor": {
            "type": "integer"
          },
          "frecuencia_unidad": {
            "type": "string"
          },
          "duracion": {
            "type": "string"
          }
        },
        "required": [
          "producto",
          "frecuencia_valor",
          "frecuencia_unidad",
          "duracion"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "correo",
    "receta_id",
    "institucion",
    "recetas"
  ],
  "additionalProperties": false
}