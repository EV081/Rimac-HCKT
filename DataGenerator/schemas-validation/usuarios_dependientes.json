{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Usuarios Dependientes",
  "type": "object",
  "x-dynamodb": {
    "partition_key": "correo_tutor",
    "sort_key": "dependiente_id"
  },
  "properties": {
    "correo_tutor": {
      "type": "string",
      "format": "email"
    },
    "dependiente_id": { "type": "string" },
    "nombre": { "type": "string" },
    "cumpleanos": { "type": "string" },
    "parentesco": { 
        "type": "string",
        "enum": ["HIJO", "ADULTO_MAYOR"]
    },
    "sexo": { 
        "type": "string",
        "enum": ["M", "F"]
    }
  },
  "required": ["correo_tutor", "nombre", "cumpleanos", "parentesco", "sexo"],
  "additionalProperties": false
}
