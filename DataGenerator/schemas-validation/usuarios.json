{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Usuarios",
  "type": "object",
  "x-dynamodb": {
    "partition_key": "correo"
  },
  "properties": {
    "correo": {
      "type": "string",
      "format": "email"
    },
    "contrasena": { "type": "string" },
    "nombre": { "type": "string" },
    "sexo": { 
        "type": "string",
        "enum": ["M", "F"]
    },
    "role": {
      "type": "string",
      "enum": ["USER", "ADMIN", "TUTOR"]
    }
  },
  "required": ["correo", "nombre", "sexo", "role", "contrasena"],
  "additionalProperties": false
}
